.view-list-item {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
  padding: 15px;
  border-bottom: 1px solid #ddd;
}

.article-metadata {
  font-size: 14px;
  color: #555;
}
/* Year headings */
.year-heading {
  font-size: 24px;
  font-weight: bold;
  margin-top: 30px;
  color: #3f51b5;
  border-bottom: 2px solid #3f51b5;
  padding-bottom: 5px;
}

/* Force table to have NO visible borders */
.pub-table {
  width: 100%;
  margin-bottom: 15px;
  border-collapse: collapse !important; /* Ensures no visible table lines */
  border: none !important;
  table-layout: fixed;
}

/* Remove border from ALL table cells */
.pub-table td {
  border: none !important;
}

/* Icon (Left) */
.pub-icon {
  width: 5%;
  font-size: 20px;
  text-align: center;
  vertical-align: middle;
  padding-right: 10px;
}

/* Publication Info (Middle, 75%) */
.pub-info {
  width: 75%;
  vertical-align: middle;
  padding-right: 15px;
}

/* Title */
.pub-title {
  font-size: 18px;
  font-weight: bold;
  color: #0073e6 !important; /* Force blue */
}

/* Authors */
.pub-authors {
  font-size: 14px;
  color: #555;
}

/* Journal info */
.pub-journal {
  font-size: 14px;
  color: #777;
}

/* Thumbnail (Right, Fixed to 120px Height and 210px Width) */
.pub-thumbnail {
  width: 210px !important;
  height: 120px !important;
  text-align: right;
  vertical-align: middle;
  overflow: hidden; /* Prevents misalignment */
}

.pub-thumbnail img {
  height: 120px !important; /* Fixed height */
  width: auto !important;  /* Auto width to maintain aspect ratio */
  max-width: 210px !important; /* Ensures width doesn't exceed the set width */
  border-radius: 5px;
}

